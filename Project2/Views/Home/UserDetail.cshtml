@model MyUser

@{
    ViewData["Title"] = "User Detail";
}

@section AddToHead{
    <link rel="stylesheet" href="~/css/detail.css">

}

<ol class="breadcrumb">
    <div class="container">
        <span class="fas fa-home"></span>
        <li><a href="@Url.Action("Index","Home")">Home</a></li>
        <li class="active">@ViewBag.User</li>
        <a href="@Url.Action("Logout", "Home")">Log Out</a>
    </div>

</ol>


<section id="main-body">
    <h2>Users</h2>
    <table style="width:100%">
        <tr>
            <th>@Html.LabelFor(x => x.Id)</th>
            <th>@Html.LabelFor(x => x.Email)</th>
            <th>@Html.LabelFor(x => x.Password)</th>
            <th></th>
        </tr>
        @foreach (var item in (List<MyUser>)ViewBag.ListUsers)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Email</td>
                <td>@item.Password</td>
                <td><a href="@Url.Action("Edit","Home", new {id = item.Id})">EDIT</a></td>
            </tr>
        }
    </table>
    <h2>Contacts</h2>
    <table style="width:100%">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Subject</th>
            <th>Message</th>
        </tr>
        @foreach (var item in (List<ContactForm>)ViewBag.ListContacts)
        {
        <tr>
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>@item.Subject</td>
            <td>@item.Message</td>

        </tr>
        }
    </table>
</section>