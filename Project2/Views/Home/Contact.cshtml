@model ContactForm
@{
    ViewData["Title"] = "Contact";
}

@section AddToHead{
    <link rel="stylesheet" href="~/css/contact.css">
}

<ol class="breadcrumb">
    <div class="container">
        <span class="fas fa-home"></span>
        <li><a href="@Url.Action("Index","Home")">Home</a></li>
        <li class="active">Contact us</li>
    </div>
</ol>


<section id="main-body">
    <div class="container">
        <div class="row">
            <div class="col main-content">
                <div class="container">
                    <div class="row">
                        <section class="form-page">
                            <div class="col-auto">
                                <h2>Get in Touch with us</h2>
                                <p>
                                    Glad to see you anytime
                                    <span class="far fa-smile-wink"></span>
                                </p>
                                @using (Html.BeginForm(FormMethod.Post, new { @class = "login-custom form-horizontal" }))
                                {
                                    <input type="hidden" name="action" value="send">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            @Html.TextBoxFor(x => x.Name, new { @class = "userLogin", @placeholder = "Name" })
                                        </div>
                                        <div class="col-lg-6">
                                            @Html.TextBoxFor(x => x.Email, new { @class = "userLogin", @id = "inputEmail", @placeholder = "Email Address", @type = "email" })
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            @Html.TextBoxFor(x => x.Subject, new {@class = "userLogin", @placeholder = "Subject", @id = "inputSubject"})
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            @Html.TextAreaFor(x => x.Message, new { @class = "userLogin", @placeholder = "Message", @id = "inputMessage" })
                                        </div>

                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <button type="submit" class="login-btn">Send Message</button>
                                        </div>
                                    </div>
                                 }
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="socialmedia">
    <div class="container">
        <div class="row">
            <div class="col">
                <h3>
                    Follow us <br>Now <span class="far fa-smile-wink"></span>
                </h3>
                <div class="social-icons">
                    <a href="" class="fab fa-facebook social-cus"></a>
                    <a href="" class="fab fa-twitter social-cus"></a>
                    <a href="" class="fab fa-instagram social-cus"></a>
                    <a href="" class="fab fa-linkedin social-cus"></a>
                    <a href="" class="fab fa-google-plus social-cus"></a>
                </div>
            </div>

        </div>
    </div>
</div>


<div class="contact-way">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="mail-contact">
                    <span class="fas fa-envelope mail"></span>
                    <span>phamthach217@gmail.com</span>
                </div>
                <div class="phone-contact">
                    <span class="fas fa-mobile mail"></span>
                    <span>+420773622011</span>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="map" class="map contact" style="position: relative; overflow: hidden;"></div>